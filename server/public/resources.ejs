    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap');

        /* Apply Montserrat font to all elements */
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #F0F0F0;
   

        }

        .article-container {
            width: 100%;
            background-color: #F0F0F0;
            border-radius: 5px;

            margin-top: 20px;
            
            padding: 0px 10px;
            display: flex;
            flex-direction: column;
        }

        .article {
            width: 100%;
            background-color: white;
            padding: 25px 10px;
            margin: 10px 5px;
            display: block;

        }

        .container {
            display: grid;
            grid-template-columns: 70% 30%;
            gap: 20px;
            justify-items:baseline;
        }

        .donation-icon {
            width: 60px;
            height: 60px;
            margin-left: 5px;
        }

        .icon {
            width: 100%;
            height: 100%;
            border-radius: 4px;
        }

   
        .top-donation-containers {
            display: flex;
            flex-direction: column;
            width: 250px;
            height: max-content;
            background-color: white;
            border-radius: 4px;
            margin-top: 20px;
            position:static;
        }
        @media (max-width: 900px) {
            .top-donation-containers  {
              display: none;
            }
          }
          @media (max-width: 900px) {
            .container {
                display: grid;
                grid-template-columns: 100%;
            }
          }
        .donation-corp {
            display: flex;
            width: 220px;
            height: 70px;
            margin-bottom: 5px;
            flex-direction: row;
            align-items: center;
            gap: 10px;


        }

        .donation-info .donation-name {
            width: 150px;

        }

        .donation-stat {
            width: 150px;
            font-size: 0.8rem;
            color: #00e500;
        }

        .donation-info {
            display: flex;
            flex-direction: column;
        }

        #header-resources {
            background-color: white;
            padding:20px;
            margin: 0px 5px;
            width: 100%;
            text-align: center;
            font-size: larger;
            border-radius: 5px;
        }

        #header-donations {
            padding: 10px 10px 5px 10px;
            width: 250px
        }

        hr {
            margin: 0 5px;
            padding: 5px 10px;

        }

        .author {

            display: flex;
            font-weight: 800;
            font-size: 0.8rem;
            width: 200px;
            height: 40px;
            flex-direction: row;
            align-items: center;
            gap: 4px;
            opacity:70%;
        }

        .avatar {
            width: 100%;
            height: 100%;
            border-radius: 4px;
        }

        .author-img {
            width: 25px;
            height: 25px;

        }

        .title {
            text-align: left;
            display: block;
            font-weight: 800;
            font-size: 1.5rem;
            padding: 0px 0 10px 0;
        }

        .news-img {
            width: 100%
        }

        .content {
            padding: 30px 0;
        }
    </style>
    
</head>

<body>

    <!-- Navbar -->
    <%- include('header.ejs') %>

        <!-- Jumbotron -->


        <!-- Articles Section -->
        <div class="container">

            <div class="article-container">

                <span id="header-resources">Новости дня</span>
                <% data.forEach(data=> { %>
            
                    <div class="article">
                        <div class="author">
                            <div class="author-img"><img
                                    src='https://previews.123rf.com/images/apoev/apoev2107/apoev210700029/171405822-default-avatar-photo-placeholder-gray-profile-picture-icon-business-man-illustration.jpg'
                                    class="avatar"></div>
                            <div class="name">
                                <%= data.author %>
                            </div>
                        </div>

                        <div class="title">
                            <%= data.title %>
                        </div>
                        <div class="news-img"><img class='news-img' src="<%= data.urlToImage %>"></div>
                        <div class="content">
                            <%= data.description %>
                        </div>
                    
                        <div class="publishedAt">
                            <%= data.publishedAt.slice(0, 10)+" "+data.publishedAt.slice(12,19); %>
                        </div>
                        <span><a href="<%= data.url %>">View full article</a></span>
                        


                    </div>
                    <% }); %>
