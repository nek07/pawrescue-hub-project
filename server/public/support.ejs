                </li>
    
                <li class="nav-item ">
                    <a class="nav-link" href="/auth/registration">Login</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <h2 class="text-center">Paw Rescue Foundation</h2>
        <form id="donationForm" method="post">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" required>
            </div>
            <div class="form-group">
                <label for="cardNumber">Card Number:</label>
                <input type="text" class="form-control" id="cardNumber" required>
            </div>
            <div class="form-group">
                <label for="cvv">CVV:</label>
                <input type="text" class="form-control" id="cvv" required>
            </div>
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" required>
            </div>
            <div class="form-group">
                <label for="lastName">Last Name:</label>
                <input type="text" class="form-control" id="lastName" required>
            </div>
            <div class="form-group">
                <label for="amount">Amount:</label>
                <input type="number" class="form-control" id="amount" required>
            </div>
            <button type="button" class="btn btn-primary" onclick="submitForm()">Donate Now</button>
        </form>
    </div>
    <footer class="bg-dark text-white text-center py-3">
        &copy; 2024 Paw Rescue Hub. All rights reserved.
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>

  
        async function handleFormSubmission(url, formData, callback) {
            try {
                await fetch(url, {
                    method: "POST",
                    mode: "cors",
                    cache: "no-cache",
                    credentials: "same-origin",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    redirect: "follow",
                    referrerPolicy: "no-referrer",
                    body: JSON.stringify(formData),
                })
                    .then(response => response.json())
                    .then(data => {
                        // Call the provided callback function with the response data
                        callback(data);
                    }).catch(error => console.error('ErrorTest:', error));
            } catch (error) {
                console.error('Error during form submission:', error);
                throw error; 
            }
        }
        
        async function submitForm()  {
            const formData = {
                amount: document.getElementById('amount').value,
                nonprofit_id: "n_dZWs9lvVIn3wfIXsTbxAAk2z",
                funds_collected: false
            };
            alert("Donation submitted!");
            document.getElementById("donationForm").reset();
            console.log("good")
            try {
                await handleFormSubmission('/pets/support', formData);
            } catch (error) {
                console.error('Error during category submission:', error);
            }
            console.log("still good")
        }
      
    </script>
