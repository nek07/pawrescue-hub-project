<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Animals</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="style/adoptionPageStyle.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>

    <!-- Navbar -->
    <%- include('header.ejs') %>
        <!-- Product Cards -->
        <div class="container mt-5">
            <div class="row">
                <div class="container mt-5">
                    <div class="row">
                        <% animal.forEach(animal=> { %>

                            <div class="profile-card">
                                <!-- Image on the left side -->
                                <img src="<%= animal.picture %>" alt="Profile Image" class="profile-image">

                                <!-- Content on the right side -->
                                <div class="profile-content">
                                    <!-- Name -->
                                    <div class="profile-name">
                                        <%= animal.breed %>
                                    </div>
                                    <span class="profile-age">
                                        <%= animal.breed %> •
                                    </span>
                                    <span class="profile-age">Age: <%= animal.age %></span>

                                    <!-- Description -->
                                    <div class="profile-description">

                                        <%- (animal.description.split(/\s+/).slice(0,
                                            15).join(' ').replace(/\*\*(.*?)\*\*/g, ' <strong>$1</strong>')) %>

                                    </div>
                                    <hr>
                                    <span class="profile-location">• <%= animal.city %></span>

                                </div>
                            </div>
                            <% }); %>
                    </div>
                </div>

            </div>
        </div>

        <!-- Footer -->
        <%- include('footer.ejs') %>
</body>

</html>