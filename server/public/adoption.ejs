<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Animals</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="style/adoptionPageStyle.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap');

        /* Apply Montserrat font to all elements */
        body {
            font-family: 'Montserrat', sans-serif;
            font-size: 1.15rem;
        }

        /* Apply Montserrat font to specific elements */
        h1,
        h2,
        h3,
        p {
            font-family: 'Montserrat', sans-serif;
        }

        .profile-card {
            width: 500px;
            height: 200px;
            display: flex;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            margin: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease-in-out;
        }

        .profile-card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        /* Styles for the image */
        .profile-image {
            width: 150px;
            height: 100%;
            object-fit: cover;
        }

        /* Styles for the content on the right side */
        .profile-content {
            flex: 1;
            padding: 15px;
        }

        /* Styles for name, description, and age */
        .profile-name {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .profile-description {
            font-size: 14px;
            color: #555;
            margin: 8px 0 5px;
            overflow: hidden;
        }

        .profile-location {
            font-size: 14px;
            color: #000;
            margin: 4rem 0 !important;
            overflow: hidden;
        }

        hr {
            margin: 1rem 0rem 0.5rem !important;
        }

        .profile-age {
            font-size: 12px;
            color: #777;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <%- include('header.ejs') %>
        <!-- Product Cards -->
        <div class="container mt-5">
            <div class="row">
                <div class="container mt-5">
                    <div class="row">
                        <% animal.forEach(animal=> { %>

                            <div class="profile-card">
                                <!-- Image on the left side -->
                                <img src="<%= animal.picture %>" alt="Profile Image" class="profile-image">

                                <!-- Content on the right side -->
                                <div class="profile-content">
                                    <!-- Name -->
                                    <div class="profile-name">
                                        <%= animal.breed %>
                                    </div>
                                    <span class="profile-age">
                                        <%= animal.breed %> •
                                    </span>
                                    <span class="profile-age">Age: <%= animal.age %></span>

                                    <!-- Description -->
                                    <div class="profile-description">

                                        <%- (animal.description.split(/\s+/).slice(0,
                                            15).join(' ').replace(/\*\*(.*?)\*\*/g, ' <strong>$1</strong>')) %>

                                    </div>
                                    <hr>
                                    <span class="profile-location">• <%= animal.city %></span>

                                </div>
                            </div>
                            <% }); %>
                                <nav aria-label="..." class="col-12">
                                    <ul class="pagination">
                                        <li class="page-item ">
                                            <a href="" class="page-link-prev page-link" onclick="prevPage()">Previous</a>
                                        </li>
                                        <li class="page-item"><a class="page-link" href="/pets/adoption?page=0">1</a>
                                        </li>
                                        <li class="page-item"><a class="page-link" href="/pets/adoption?page=1">2</a>
                                        </li>
                                        <li class="page-item"><a class="page-link" href="/pets/adoption?page=2">3</a>
                                        </li>
                                        <li class="page-item"><a class="page-link" href="/pets/adoption?page=3">4</a>
                                        </li>
                                        <li class="page-item">
                                            <div href="" class="page-link-next page-link" onclick="nextPage()">Next</div>
                                        </li>
                                    </ul>
                                </nav>
                    </div>
                </div>

            </div>
        </div>

        <!-- Footer -->
        <%- include('footer.ejs') %>
        <script>
            var page = parseInt(new URLSearchParams(window.location.search).get('page')) || 0;
        
            function addOrUpdateURLParam(key, value) {
                const searchParams = new URLSearchParams(window.location.search);
                searchParams.set(key, value);
                const newRelativePathQuery = window.location.pathname + "?" + searchParams.toString();
                history.pushState(null, "", newRelativePathQuery);
            }
        
            function updatePageLinks() {
                document.querySelector('.page-link-prev').href = "/pets/adoption?page=" + (page - 1);
                document.querySelector('.page-link-next').href = "/pets/adoption?page=" + (page + 1);
            }
        
            function nextPage() {
                page += 1;
                addOrUpdateURLParam("page", page);
                updatePageLinks();
            }
        
            function prevPage() {
                if (page > 0) {
                    page -= 1;
                    addOrUpdateURLParam("page", page);
                    updatePageLinks();
                }
            }
        
            // Call the function initially
            updatePageLinks();
        </script>
        
        
        
</body>

</html>